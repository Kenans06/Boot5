<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stepcounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#880000"
            android:text="@string/stepsMade"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@color/wallet_holo_blue_light"
            android:text="@string/addEventB"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/backToHome"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:text="@string/returnHome"
            android:textColor="@color/white" />

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.gebruiker.sportapp.Homepage.GPS" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom">


    </LinearLayout>





</FrameLayout>